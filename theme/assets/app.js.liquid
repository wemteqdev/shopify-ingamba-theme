$(document).foundation();

// extends jQuery
(function($) {
		$.fn.setAllToMaxHeight = function(){
			return this.height( Math.max.apply(this, jQuery.map( this , function(e){ return jQuery(e).height() }) ) );
		}

    $.fn.goTo = function() {
        $('html, body').animate({
            scrollTop: $(this).offset().top + 'px'
        }, 'fast');
        return this; // for chaining...
    }
})(jQuery);

// main javascripts
