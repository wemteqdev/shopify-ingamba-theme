#mini-cart{display:block;padding:8px 0px 0px 0px;margin:0;color:{{settings.minicart_text_color}};font-size:12px;width:200px;height:42px;position:absolute;right: -22px;
top: 12px;text-align:center;}
#mini-cart em{display:block;text-align:center;padding:16px 0 0 0;}

{% case settings.minicart_bg %}
{% when "no-background" %}
    #mini-cart{background:none;padding:0;line-height:1.1;}
    #mini-cart em{padding:0;}
{% when "color" %}
    #mini-cart{background:{{settings.minicart_bg_color}};padding:3px 0;line-height:1.1;}
    #mini-cart span{display:block;padding-top:7px;font-size:14px;font-weight:bold;} 
    #mini-cart em{padding:0;}
{% else %}
    #mini-cart{background:url({{ settings.minicart_bg | asset_url }}) no-repeat right top;}
    #mini-cart span{display:none;}    
{% endcase %}

#mini-cart:hover{color:{{settings.minicart_text_color_hover}};}

